# makefile

SHELL=/bin/sh
OUTPATH=../key

.SUFFIXES: .lslp .lsl

SRC=Dress.lslp \
	Main.lslp \
	MenuHandler.lslp \
	RLV.lslp \
	Start.lslp \
	Taker.lslp \
	Transform.lslp

OUT=$(OUTPATH)/Dress.lsl \
	$(OUTPATH)/Main.lsl \
	$(OUTPATH)/MenuHandler.lsl \
	$(OUTPATH)/RLV.lsl \
	$(OUTPATH)/Start.lsl \
	$(OUTPATH)/Taker.lsl \
	$(OUTPATH)/Transform.lsl

INCLUDES=include/config.h \
	include/CommonGlobals.lsl \
	include/GlobalDefines.lsl \
	include/KeySharedFuncs.lsl \
	include/RestrainedLoveAPI.lsl \
	include/Utility.lsl

all: $(OUT)

.lslp.cpp:
	cat $< >$@

$(OUTPATH)/%.lsl: %.cpp $(INCLUDES)
	@CPP@ -C -P -nostdinc -o $@ $<

clean:
	rm -f *.lsl
